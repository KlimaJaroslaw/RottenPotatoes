@model RottenPotatoes.Models.User

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title mb-0">
                User
            </h4>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-12">
                    <div class="form-label opacity-75">Name</div>
                    <div class="text-black fs-5">
                        @(@Model?.Login_Hash ?? "N/A")
                    </div>
                </div>
                @* <div class="col-12">
                    <div class="form-label opacity-75">Email</div>
                    <div class="text-black fs-5">
                        @(@Model?.Email_Hash ?? "N/A")
                    </div>
                </div> *@
                <div class="col-12">
                    <div class="form-label opacity-75">Role</div>
                    <div class="text-black fs-5">
                        @(@Model?.Permission?.Description ?? "N/A")
                    </div>
                </div>               
            </div>
            <div class="mt-3">                
                <form asp-controller="Review" asp-action="User" asp-route-id="@Model.User_ID" method="get" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-primary">
                        See Reviews <i class="bi bi-box-arrow-up-right"></i>
                    </button>
                </form>
            </div>

        </div>
    </div>
</div>