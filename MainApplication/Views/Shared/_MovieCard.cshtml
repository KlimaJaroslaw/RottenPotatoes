@model Movie

@{
    
}

<div class="container">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="card-title mb-0">
                Movie
            </h4>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <div class="col-12">
                    <div class="form-label opacity-75">Title</div>
                    <div class="text-black fs-5">
                        @(@Model?.Title ?? "N/A") @("("+@Model?.Production_Date.ToString("yyyy")+")" ?? "")
                    </div>
                </div>                                                                
                <div class="col-12">
                    <div class="form-label opacity-75">Director</div>
                    <div class="text-black fs-5">
                        @(@Model?.Director ?? "N/A")
                    </div>
                </div>
                @* <div class="col-12">
                    <div class="form-label opacity-75">Producer</div>
                    <div class="text-black fs-5">
                        @(@Model?.Producer ?? "N/A")
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-label opacity-75">ScreenWriter</div>
                    <div class="text-black fs-5">
                        @(@Model?.ScreenWriter ?? "N/A")
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-label opacity-75">Synopsis</div>
                    <div class="text-black fs-5">
                        @(@Model?.Synopsis ?? "N/A")
                    </div>
                </div> *@
            </div>
            <div class="mt-3">                
                <form asp-controller="Movie" asp-action="Details" asp-route-id="@Model.Movie_ID" method="get" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-primary">See Details <i class="bi bi-box-arrow-up-right"></i></button>
                </form>
                <form asp-controller="Review" asp-action="Movie" asp-route-id="@Model.Movie_ID" method="get" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-primary">
                        See Reviews <i class="bi bi-box-arrow-up-right"></i>
                    </button>
                </form>
            </div>
            
        </div>
    </div>
</div>